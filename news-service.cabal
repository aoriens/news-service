cabal-version: 1.12

name:           news-service
version:        0.1.0.0
description:    Please see the README on GitHub at <https://github.com/aoriens/news-service#readme>
homepage:       https://github.com/aoriens/news-service#readme
bug-reports:    https://github.com/aoriens/news-service/issues
author:         Anton Kalinin
maintainer:     aoriens@gmail.com
copyright:      (c) Anton Kalinin
license:        BSD3
license-file:   LICENSE
build-type:     Simple
extra-source-files:
    README.md

source-repository head
  type: git
  location: https://github.com/aoriens/news-service

library
  exposed-modules:
    Control.Exception.Sync
    , Core.Authentication
    , Core.Authorization
    , Core.Exception
    , Core.Image
    , Core.Interactor.CreateUser
    , Core.Interactor.DeleteUser
    , Core.Interactor.GetImage
    , Core.Interactor.GetNews
    , Core.Interactor.GetUser
    , Core.Interactor.GetUsers
    , Core.Pagination
    , Core.User
    , Data.ByteString.Util
    , Data.Either.Util
    , Data.Integral.Exact
    , Database
    , Database.ConnectionManager
    , Gateway.CurrentTime
    , Gateway.Images
    , Gateway.News
    , Gateway.SecretToken
    , Gateway.Users
    , Logger
    , Logger.Impl
    , Network.Wai.Util
    , Web.Application
    , Web.AppURL
    , Web.BasicAuth
    , Web.Credentials
    , Web.Entity.Base64
    , Web.Entity.User
    , Web.Exception
    , Web.Handler.DeleteUser
    , Web.Handler.GetNews
    , Web.Handler.GetImage
    , Web.Handler.GetUser
    , Web.Handler.GetUsers
    , Web.Handler.PostCreateUser
    , Web.HTTP
    , Web.JSONEncoder
    , Web.Presenter.UserPresenter
    , Web.QueryParameter
    , Web.QueryParameter.PageQuery
    , Web.RequestBodyLoader
    , Web.Types
    , Web.Types.Internal.SessionId
    , Web.Router
  hs-source-dirs:
      src
  build-depends:
      aeson
    , aeson-pretty
    , base >=4.7 && <5
    , base64
    , bytestring
    , cryptonite
    , deepseq
    , dlist
    , exceptions
    , hasql
    , hasql-th
    , hasql-transaction
    , http-types
    , memory
    , mtl
    , network
    , profunctors
    , stm
    , text
    , time
    , transformers
    , unordered-containers
    , vector
    , wai
    , warp
  default-language: Haskell2010
  default-extensions: OverloadedStrings RecordWildCards

executable news-service-exe
  main-is: Main.hs
  other-modules:
      Config
    , Config.IO
  hs-source-dirs:
      app
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      aeson
    , async
    , base >=4.7 && <5
    , bytestring
    , configurator
    , http-types
    , news-service
    , text
    , time
    , transformers
    , unordered-containers
    , wai
    , warp
  default-language: Haskell2010
  default-extensions: OverloadedStrings RecordWildCards

test-suite news-service-test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      Core.AuthenticationSpec
    , Core.AuthorizationSpec
    , Core.Interactor.GetNewsSpec
    , Core.Interactor.CreateUserSpec
    , Core.PaginationSpec
    , Data.Integral.ExactSpec
    , Gateway.SecretTokenSpec
    , Web.AppURLSpec
    , Web.BasicAuthSpec
    , Web.CredentialsSpec
    , Web.QueryParameterSpec
    , Web.RouterSpec
  hs-source-dirs:
      test
  ghc-options: -rtsopts
  build-depends:
      base >=4.7 && <5
    , base64
    , bytestring
    , deepseq
    , hspec
    , http-types
    , network-uri
    , news-service
    , QuickCheck
    , text
    , time
    , unordered-containers
    , wai
  default-language: Haskell2010
  default-extensions: OverloadedStrings RecordWildCards

benchmark news-service-bench
  type: exitcode-stdio-1.0
  main-is: Main.hs
  other-modules:
    Web.QueryParameterBench
  hs-source-dirs:
      bench
  ghc-options: -rtsopts -O2
  build-depends:
      base >=4.7 && <5
    , bytestring
    , criterion
    , news-service
  default-language: Haskell2010
  default-extensions: OverloadedStrings
